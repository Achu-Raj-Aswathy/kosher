<%- include('./partials/adminHeader') %>

<!-- ===========wrapper============= -->
<div class="wrapper">
  <%- include('./partials/header') %>

  <!-- ===========Innerpage-wrapper============= -->
  <section>
    <div class="content add-details">
      <div class="in-content-wrapper">
        <div class="row no-gutters">
          <div class="col">
            <div class="heading-messages">
              <h3>Hotel Listing</h3>
            </div>
            <!-- End heading-messages -->
          </div>
          <!-- End column -->
        </div>
        <!-- end row -->

        <div class="box">
          <div class="row">
            <div class="col">
              <div class="details-text">
                <h4>Edit Details</h4>
              </div>
              <!-- end details-text -->
            </div>
            <!-- End column -->
          </div>
          <!-- end row -->
          <div class="hotel-listing-form">
            <form
              class="text-center"
              id="hotelForm"
              enctype="multipart/form-data"
            >
              <div class="form-row">
                <div class="col-md">
                  <div class="form-group">
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <label class="input-group-text" for="roomType"
                          >Room Type:</label
                        >
                      </div>
                      <select
                        class="custom-select"
                        id="roomType"
                        name="roomType"
                        required
                      >
                        <option value="<%=room.roomType%>" selected>
                          <%=room.roomType%>
                        </option>
                        <option value="deluxe">Deluxe</option>
                        <option value="twin">Twin</option>
                      </select>
                      <i class="fas fa-angle-down"></i>
                    </div>
                  </div>
                  <!-- end form-group -->
                </div>
                <!-- end column -->

                <div class="col-md">
                  <div class="form-group">
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <label class="input-group-text" for="bedCapacity"
                          >Bed Capacity:</label
                        >
                      </div>
                      <select
                        class="custom-select"
                        id="bedCapacity"
                        name="bedCapacity"
                        required
                      >
                        <option value="<%=room.capacity%>" selected>
                          <%=room.capacity%>
                        </option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                      </select>
                      <i class="fas fa-angle-down"></i>
                    </div>
                  </div>
                  <!-- end form-group -->
                </div>
                <!-- end column -->
              </div>
              <!-- end form-row -->

              <div class="form-row">
                <div class="col-md">
                  <div class="form-group">
                    <div class="form-group">
                      <label for="numRooms" class="">No of Rooms:</label>
                      <input
                        type="text"
                        class="form-control"
                        required
                        id="numRooms"
                        name="numRooms"
                        aria-required="true"
                        value="<%=room.count%>"
                      />
                    </div>
                  </div>
                  <!-- end form-group -->
                </div>
                <!-- end column -->

                <div class="col-md">
                  <div class="form-group">
                    <div class="form-group">
                      <label for="rentPerNight" class="">Rent Per Night:</label>
                      <input
                        type="text"
                        class="form-control"
                        required
                        id="rentPerNight"
                        name="rentPerNight"
                        aria-required="true"
                        value="<%=room.price%>"
                      />
                    </div>
                  </div>
                  <!-- end form-group -->
                </div>
                <!-- end column -->
              </div>
              <!-- end form-row -->

              <div id="demo-upload" class="dropzone needsclick dz-clickable">
                <input type="file" name="images" id="filepond" multiple />
              </div>

              <div class="form-group">
                <textarea
                  class="form-control textarea text-left p-3 h-100"
                  id="roomDetails"
                  name="roomDetails"
                  rows="5"
                  placeholder="Room Details"
                  required
                  value="<%=room.description%>"
                >
<%=room.description%></textarea
                >
              </div>
              <!-- end form-group -->
              <ul class="list-inline">
                <li class="list-inline-item">
                  <button type="submit" class="btn" id="submit">Submit</button>
                </li>
                <li class="list-inline-item">
                  <button type="submit" class="btn" id="cancelBtn">
                    Cancel
                  </button>
                </li>
              </ul>
            </form>
          </div>
          <!-- end hotel-listing-form -->
        </div>
        <!-- end box -->
      </div>
      <!-- end in-content-wrapper -->
    </div>
    <!-- end add-details -->
  </section>

  <script>
    FilePond.registerPlugin(FilePondPluginImagePreview);
    const pond = FilePond.create(document.querySelector("#filepond"), {
      allowMultiple: true,
      maxFiles: 5,
      acceptedFileTypes: ["image/*"],
      imagePreviewHeight: 150,
      stylePanelLayout: "compact",
      styleItemPanelAspectRatio: 1,
    });

    document
      .getElementById("hotelForm")
      .addEventListener("submit", async function (e) {
        e.preventDefault();
        const roomType = document.getElementById("roomType");
        const bedCapacity = document.getElementById("bedCapacity");

        if (!roomType.value || !bedCapacity.value) {
          await Swal.fire({
            icon: "warning",
            title: "Missing Information",
            text: "Please select both Room Type and Bed Capacity.",
          });
        }
        const formData = new FormData();

        formData.append("roomType", document.getElementById("roomType").value);
        formData.append(
          "bedCapacity",
          document.getElementById("bedCapacity").value
        );
        formData.append("numRooms", document.getElementById("numRooms").value);
        formData.append(
          "rentPerNight",
          document.getElementById("rentPerNight").value
        );
        formData.append(
          "roomDetails",
          document.getElementById("roomDetails").value
        );

        pond.getFiles().forEach((file) => {
          formData.append("documents", file.file);
        });

        try {
          const response = await fetch("/admin/edit-rooms?id=<%=room._id%>", {
            method: "PUT",
            body: formData,
          });

          const result = await response.json();

          if (response.ok) {
            await Swal.fire({
              icon: "success",
              title: "Success!",
              text: "Hotel edited successfully.",
            });
            window.location.href = "/admin/rooms";
          } else {
            await Swal.fire({
              icon: "error",
              title: "Error",
              text: result.message || "Failed to update room.",
            });
          }
        } catch (error) {
          console.error("Error:", error);
          await Swal.fire({
            icon: "error",
            title: "Oops!",
            text: "An error occurred during submission. Please try again later.",
          });
        }
      });

    document.getElementById("cancelBtn").addEventListener("click", () => {
      document.getElementById("hotelForm").reset();
      pond.removeFiles(); // Clear FilePond uploads
    });
  </script>

  <style>
    /* Ensure previews are aligned in a row */
    .filepond--item {
      width: 150px; /* Control the width of each preview */
      margin-right: 10px; /* Add some spacing between previews */
    }

    /* Ensure the container does not force a vertical stack */
    .filepond--root {
      display: flex;
      flex-wrap: nowrap; /* Prevent wrapping to the next line */
      overflow-x: auto; /* Enable horizontal scrolling if needed */
    }
  </style>

  <!-- ===========End Innerpage-wrapper============= -->
</div>
<!-- end wrapper -->

<%- include('./partials/adminFooter') %>
