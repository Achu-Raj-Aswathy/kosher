<!doctype html>
<html lang="en">
    <head>
        <title>Login 1</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <link rel="icon" href="images/favicon.png" type="image/x-icon">
        
        <!-- Google Fonts -->	
        <link href="https://fonts.googleapis.com/css?family=Lato:300,300i,400,400i,700,700i,900,900i%7CPlayfair+Display:400,400i,700,700i,900,900i" rel="stylesheet">
        
        <!-- Bootstrap Stylesheet -->	
        <link rel="stylesheet" href="/css/bootstrap.min4.3.1.css">
        
        <!-- Font Awesome Stylesheet -->
        <link rel="stylesheet" href="/css/font-awesome.min.css">
            
        <!-- Custom Stylesheets -->	
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" id="cpswitch" href="/css/yellow.css">
        <link rel="stylesheet" href="/css/responsive.css">
    </head>
    
    
    <body>
        
        <div class="loader"></div>
        
        <section id="custom-form-wrapper" class="innerpage-wrapper">
        
        	<div id="login" class="innerpage-section-padding">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="custom-form">
                                <h3>Login</h3>
                                <form class="text-left" action="/admin/login" method="post">
                                    <div class="form-group">
                                         <input type="email" class="form-control" name="email" placeholder="Email"  required/>
                                         <span><i class="fa fa-user"></i></span>
                                    </div>
                                    
                                    <div class="form-group">
                                         <input type="password" class="form-control" name="password" placeholder="Password"  required/>
                                         <span><i class="fa fa-lock"></i></span>
                                    </div>
                                    <div class="form-group">
                                        <h4 class="text-danger text-center" ><%= adminAlert %></h4>
                                    </div>
                                    
                                    <button class="btn btn-black btn-block">Login</button>
                                </form>
                                
                                <div class="other-links">
                                    <!-- <p class="link-line">New Here ? <a href="registration-1.html">Signup</a></p> -->
                                    <a class="simple-link" href="#">Forgot Password ?</a>
                                </div><!-- end other-links -->
                            </div><!-- end custom-form -->
                            
                        </div><!-- end columns -->
                    </div><!-- end row -->
                </div><!-- end container -->         
            </div><!-- end login -->
            
        </section><!-- end innerpage-wrapper -->
        
    
        
        
        <!-- Page Scripts Starts -->
        <script src="/js/jquery-3.3.1.min.js"></script>
        <script src="/js/bootstrap.min4.3.1.js"></script>
        <script src="/js/custom-navigation.js"></script>
        <!-- Page Scripts Ends -->
        
	</body>
</html>